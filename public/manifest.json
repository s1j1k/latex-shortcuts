{
    "name": "Latex Shortcuts",
    "description": "Shortcuts for writing latex in browser",
    "version": "1.0",
    "manifest_version": 3,
    "permissions": [
       "activeTab",
       "scripting",
       "commands"
    ],
    "background": {
       "service_worker": "background.js"
    },
    "action": {
      "default_title": "Convert shortcuts to latex"
    },
    "commands": {
      "_execute_action": {
        "suggested_key": {
          "default": "Ctrl+Space",
          "mac": "Ctrl+Space"
        }
      }
    }
 }